.tab-bar{
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	background: #fff;
	font-size: 28rpx;
	display: flex;
	align-items: center;
	justify-content: space-around;
}
.tab-bar .item{
	padding: 10rpx 0;
}
.tab-bar .item .icon-tab{
	height: 60rpx;
	width: 60rpx;
}
.tab-bar .item .txt{
	color: #666;
}
.tab-bar .item.active .txt{
	color: #58B15F;
}