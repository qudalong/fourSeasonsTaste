page {
	padding: 10rpx;
	width: auto;
	font-size: 30rpx;
	background: #f0f0f0;
}

.flex1 {
	flex: 1;
	
}
.c{
	color: #58B15F !important;
}
.logo {
	width: 46rpx;
	height: 46rpx;
	margin-right: 10rpx;
}
.mb50{
	margin-bottom: 50px;
}
.fff {
	background: #fff;
	border-radius: 8rpx;
	overflow: hidden;
}

.icon-share {
	display: inline-block;
	width: 40rpx;
	height: 40rpx;

}
.abs{
	color: #58B15F;
}

.icon-cart {
	width: 34rpx;
	height: 34rpx;
}

.icon-right {
	display: inline-block;
	width: 16rpx;
	height: 20rpx;
	padding-left: 10rpx;
}

.row1 {
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.row2 {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;
}

.hover:hover {
	opacity: 0.9;
}

.more {
	display: flex;
	align-items: center;
	letter-spacing: 2px;
	text-align: center;
	justify-content: space-around;
	margin: 20px auto;
}

.more .flex {
	display: flex;
	align-items: center;
	text-align: center;
}

.more .line {
	width: 80rpx;
	height: 4rpx;
	background: #58B15F;
}

.more .txt {
	margin: 0 10rpx;
}

/* 空状态 */
.empty {
	text-align: center;
	margin: 100px auto;
}

/* 商品封面 */
.cover-food {
	width: 190rpx;
	height: 190rpx;
	border-radius: 2px;
	margin: 0 10rpx;
}

/* money */
.fh {
	color: #F83B1D;
}

.money {
	font-size: 36rpx;
	color: #F83B1D;
	font-weight: bold;
}

.fh-b {
	font-size: 30rpx;
	color: #58B15F;
}

.money-b {
	font-size: 30rpx;
	color: #58B15F;
}

.old {
	text-decoration: line-through;
	color: #666;
	margin-left: 10rpx;
}

.b1 {
	border-bottom: 1rpx solid #f0f0f0 !important;
}

/* 按鈕 */

.btn {
	width: 70%;
	border-radius: 40rpx;
	padding: 20rpx 0;
	margin-left: 50%;
	transform: translateX(-50%);
	text-align: center;
}

.btn-solid {
	background: #58B15F;
	color: #fff;
}

.btn-hollow {
	border: 1px solid #58B15F;
	color: #58B15F;
}

.icon-success,
.icon-fail {
	width: 140px;
	height: 140px;
}

.icon-empty {
	width: 188px;
	height: 160px;
}

.mb10 {
	margin-bottom: 10px;
}

.center {
	margin-left: 50%;
	transform: translateX(-50%);
}


/* 商品列表 */

.product-list {
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
}

.product-list .item {
	width: 49%;
	background: rgba(255, 255, 255, 1);
	box-shadow: 1px 1px 8px -3px #dedede;
	border-radius: 4px;
	margin-bottom: 20rpx;
}

.product-list .item .cover {
	height: 350rpx;
	width: 100%;
	border-radius: 2rpx;
}

.row {
	display: flex;
	justify-content: space-between;
	padding: 12rpx 5rpx 0;
}

.product-info {
	padding: 6rpx 10rpx 16rpx;
	line-height: 1.6;
	font-weight: 400;
	font-size: 28rpx;
}

.price {
	display: flex;
	align-items: baseline;
}

.small {
	font-size: 24rpx;
	font-weight: 600;
	color: rgba(248, 59, 29, 1);
}

.small text {
	font-size: 24rpx;
}

.oldPrice {
	padding-left: 20rpx;
	font-weight: 400;
	color: rgba(153, 153, 153, 1);
	font-size: 22rpx;
	text-decoration: line-through;
}

.dialog {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background: rgba(0, 0, 0, 0.5);
	z-index: 10;
}
.empty{
	text-align: center;
}
.icon_empty{
  width: 160px;
  height: 160px;
  display: inline-block;
  margin-bottom: 30rpx;
}
.f16{
	font-size: 26rpx !important;
}

/* tabbar */
.tab-bar{
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	background: #fff;
	font-size: 28rpx;
	display: flex;
	align-items: center;
	justify-content: space-around;
}
.tab-bar .item{
	padding: 10rpx 0;
}
.tab-bar .item .icon-tab{
	height: 60rpx;
	width: 60rpx;
}
.tab-bar .item .txt{
	color: #666;
}
.tab-bar .item.active .txt{
	color: #58B15F;
}