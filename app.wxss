page {
	padding: 10rpx;
	width: auto;
	font-size: 30rpx;
	background: #f0f0f0;
}

.flex1 {
	flex: 1;
}

.logo {
	width: 50rpx;
	height: 50rpx;
	margin-right: 10rpx;
}

.fff {
	background: #fff;
	border-radius: 8rpx;
	overflow: hidden;
}

.icon-share {
	display: inline-block;
	width: 50rpx;
	height: 50rpx;
}

.icon-cart {
	width: 34rpx;
	height: 34rpx;
}

.icon-right {
	display: inline-block;
	width: 20rpx;
	height: 24rpx;
	padding-left: 10rpx;
}

.row1 {
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.row2 {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;
}

.hover:hover {
	opacity: 0.9;
}

.more {
	display: flex;
	align-items: center;
	letter-spacing: 2px;
	text-align: center;
	justify-content: space-around;
	margin: 20px auto;
}

.more .flex {
	display: flex;
	align-items: center;
	text-align: center;
}

.more .line {
	width: 80rpx;
	height: 4rpx;
	background: #4CB981;
}

.more .txt {
	margin: 0 10rpx;
}
/* 空状态 */
.empty{
	text-align: center;
	margin: 100px auto;
}

/* 商品封面 */
.cover-food {
	width: 190rpx;
	height: 190rpx;
	border-radius: 2px;
	margin: 0 10rpx;
}

/* money */
.fh {
	font-size: 28rpx;
	color: #F83B1D;
}

.money {
	font-size: 36rpx;
	color: #F83B1D;
	font-weight: bold;
}

.old {
	text-decoration: line-through;
	color: #666;
	margin-left: 10rpx;
}

/* 按鈕 */

.btn {
	width: 70%;
	border-radius: 40rpx;
	padding: 20rpx 0;
	margin-left: 50%;
	transform: translateX(-50%);
	text-align: center;
}

.btn-solid {
	background: #4cb981;
	color: #fff;
}

.btn-hollow {
	border: 1px solid #4cb981;
	color: #4cb981;
}

.icon-success,
.icon-fail {
	width: 140px;
	height: 140px;
}

.icon-empty {
	width: 188px;
	height: 160px;
}

.mb10 {
	margin-bottom: 10px;
}

.center {
	margin-left: 50%;
	transform: translateX(-50%);
}


/* 商品列表 */

.product-list {
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
}

.product-list .item {
	width: 49%;
	background: rgba(255, 255, 255, 1);
	box-shadow: 1px 1px 8px -3px #dedede;
	border-radius: 4px;
	margin-bottom: 20rpx;
}

.product-list .item .cover {
	height: 350rpx;
	width: 100%;
	border-radius: 2rpx;
}

.row {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 8rpx 14rpx 0;
}

.product-info {
	padding: 6rpx 10rpx 16rpx;
	line-height: 1.6;
	font-weight: 400;
	font-size: 28rpx;
}

.price {
	display: flex;
	align-items: center;
}

.small {
	font-size: 24rpx;
	font-weight: 600;
	color: rgba(248, 59, 29, 1);
}

.small text {
	font-size: 24rpx;
}

.oldPrice {
	padding-left: 20rpx;
	font-weight: 400;
	color: rgba(153, 153, 153, 1);
	font-size: 22rpx;
	text-decoration: line-through;
}
