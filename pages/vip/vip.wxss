page {
	background: #111111;
}

.block {
	padding: 20rpx;
	border-radius: 10rpx;
	background: #111111;
	margin-bottom: 20rpx;
	font-size: 22rpx;
}

.user-info {
	display: flex;
	align-items: center;
	color: #fff;
	font-size: 26rpx;
}

.user-info .compare {
	padding: 10rpx 16rpx;
	border-radius: 10rpx;
	border: 1rpx solid #CFB079;
	color: #CFB079;
	margin-top: 10rpx;
	font-size: 22rpx;
	text-align: center;
}

.head {
	width: 80rpx;
	height: 80rpx;
	border-radius: 100%;
	margin-right: 10px;
	overflow: hidden;
}

/* 特权 */
.tab {
	display: flex;
	align-items: center;

}

.tab .item {
	flex: 1;
	text-align: center;
	color: #9A8D6A;
	padding: 20rpx 0;
	font-size: 28rpx;
}

.tab .item.act {
	background: #393939;
	color: #CFB079;
	border-radius: 6rpx 6rpx 0 0;
	font-size: 30rpx;
	font-weight: bold;
}

.vip-desc {
	min-height: 300rpx;
	padding: 50rpx;
	line-height: 1.6;
	background: #393939;
	color: #fff;
	text-align: center;
	margin-bottom: 20rpx;
	font-size: 28rpx;
	border-radius:0 0 10rpx 10rpx;
}

.tuzhang {
	display: flex;
	align-items: center;
	flex-wrap: wrap;
}

.tuzhang image {
	display: inline-block;
}

.tuzhang .item {
	box-sizing: border-box;
	width: 50%;
	padding: 0 40rpx;
	text-align: center;
	margin-bottom: 30rpx;
}


.head1 {
	margin-right: 20rpx;
}

/* 进度 */
.properss {
	padding: 30rpx 50rpx 30rpx 70rpx;
	border-radius: 8rpx;
	background: linear-gradient(to right, #FCF1D3, #F9DE8F);
}

.properss .title {
	width: 70%;
	margin: 0 auto;
	display: flex;
	align-items: center;
	justify-content: space-around;
}

.properss .title .txt {
	width: 90px;
	text-align: center;
	font-size: 28rpx;
}

.properss .title .line {
	height: 2rpx;
	width: 200rpx;
	background: #ccc;
}

.properss .item {
	padding-top: 20rpx;
	font-size: 24rpx;
}

.properss .item .row {
	display: flex;
	align-content: center;
	justify-content: space-between;
	padding-bottom: 10rpx;
}

.pro {
	position: relative;
	height: 20rpx;
	background: #fff;
	border-radius: 10rpx;
}


.pro .total {
	position: absolute;
	top: 0;
	left: 0;
	height: 20rpx;
	line-height: 20rpx;
	text-align: center;
	width: 100%;
	background: #fff;
	border-radius: 10rpx;
	z-index: 1;
}

.pro .now {
	position: absolute;
	top: 0;
	left: 0;
	height: 20rpx;
	line-height: 20rpx;
	width: 50rpx;
	background: green;
	border-radius: 10rpx;
	z-index: 2;
	color: #fff;
}

.up-btn {
	margin: 50rpx 0 0;
	margin-left: 50%;
	transform: translateX(-50%);
	padding: 20rpx 30rpx;
	border: 1rpx solid #ccc;
	display: inline-block;
	background: #ccc;
	border-radius: 10rpx;
	z-index: 2;
	color: #666;
}
.up-btn-a{
	background: #58B15F;
	color: #fff;
}

/* 通知 */

.notic {
	display: flex;
	align-items: center;
	background: #393939;
	color: #F9E097;
	border-radius: 8rpx;
	margin-top: 20rpx;
	padding: 20rpx;
	font-size: 26rpx;
}

.laba {
	height: 40rpx;
	width: 40rpx;
	padding-right: 20rpx;
}
