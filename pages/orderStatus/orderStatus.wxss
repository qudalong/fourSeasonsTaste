/* tab */
.tab-group {
	display: flex;
	align-items: center;
	justify-content: space-around;
	border-bottom: 1rpx solid #f0f0f0;
	margin-bottom: 10rpx;
	background: #fff;
}

.tab-group .item {
	font-weight: bold;
	color: #333;
	padding: 30rpx 20rpx;
	border-bottom: 2px solid #fff;
}

.tab-group .item.active {
	color: green;
	border-bottom: 2px solid green;
}
