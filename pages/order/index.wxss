/* pages/order/index.wxss */
@import '../addressList/index.wxss';

.order {
	height: 100%;
	font-size: 32rpx;
}

.address {
	border-radius: 20rpx;
	background: #FFF;
	display: flex;
	padding: 40rpx;
}

.fnt {
	font-size: 26rpx;
	font-weight: bold;
	line-height: 1.4;
}

.address .left {
	flex: 1;
	color: #333;
}

.cart-item {
	padding-bottom: 30rpx;
	margin-bottom: 30rpx;
	border-bottom: 1rpx solid #f0f0f0;

}

