page {
		background: #EDF2F7;
	}

	.swiper {
		height: 750rpx;
	}

	.item-img {
		height: 750rpx;
		width: 100%;
	}

	.food-info {
		padding: 20rpx 0;
	}

	.food-info .row {
		display: flex;
		align-items: center;
		justify-content: flex-start;
	}

	/* 分享按钮 */
	.share-box {
		text-align: center;
		font-size: 24rpx;
		padding-right: 4rpx;
		position: relative;
		width: 109rpx;
		height: 76rpx;
	}

	.share-box .abs {
		position: absolute;
		left: 10rpx;
		top: 4rpx;
		z-index: 1;
	}

	.share-btn {
		width: 109rpx;
		height: 76rpx;
		margin: 0;
		padding: 0;
		position: absolute;
		left: 10rpx;
		top: 4rpx;
		z-index: 2;
	}

	button {
		border: none;
		background: #fff;
		opacity: 0;
	}

	button::after {
		border: none;
		background: #fff;
		opacity: 0;
	}

	.button-hover {
		border: none;
		background: none;
		opacity: 0;
	}


	/* 规格 */
	.type-warp {
		margin: 20rpx 0;
		padding: 20rpx;
	}

	.type-warp .title {
		font-size: 32rpx;
		font-weight: bold;
	}

	.flex1 {
		flex: 1;
		font-weight: bold;
		line-height: 1.4;
	}

	.btn-grounp {
		margin: 30rpx 0;
		display: flex;
		align-items: center;
		justify-content: space-around;
	}

	.btn-grounp .btn-item {
		color: #333;
		background: #fff;
		border: 1rpx solid #666;
		padding: 20rpx;
		border-radius: 8rpx;
	}

	.btn-grounp .btn-item.active {
		color: #fff;
		background: #F83B1D;
		border: 1rpx solid #F83B1D;
	}

	/* 详情 */
	.desc-wrap {
		margin-bottom: 70px;
	}

	.desc-wrap image {
		width: 100%;
	}

	/* 购物车 */
	.fiexd-control {
		position: fixed;
		left: 0;
		bottom: 0;
		width: 100%;
		height: 120rpx;
		display: flex;
		align-items: center;
		justify-content: space-around;
		background: #fff;
	}

	.icon_shoppingblack,
	.icon_kefu {
		width: 50rpx;
		height: 50rpx;
		margin-bottom: 4rpx;
	}

	.fiexd-control .item {
		flex: 2;
		text-align: center;
		color: #6A6969;
	}

	.fiexd-control .cartin,
	.fiexd-control .buy {
		flex: 3;
		background: #FDA837;
		color: #fff;
		height: 100%;
		line-height: 120rpx;
		font-weight: bold;
		font-size: 32rpx;
	}

	.fiexd-control .buy {
		background: #4CB981;
	}
